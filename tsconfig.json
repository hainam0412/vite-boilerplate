{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@asset/*": ["src/asset/*"],
            "@component/*": ["src/component/*"],
            "@store/*": ["src/store/*"],
            "@style/*": ["src/style/*"],
            "@type/*": ["src/type/*"],
            "@utils/*": ["src/utils/*"],
            "@router/*": ["src/router/*"],
            "@page/*": ["src/page/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
